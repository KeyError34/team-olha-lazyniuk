{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,

  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
